{
  "name": "angularjs-webpack-simple",
  "description": "A simple boilerplate for AngularJS using webpack and components",
  "version": "0.0.12",
  "author": "Arnaud Barr√© <arnaud.barre72@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot",
    "build": "webpack --mode production",
    "test": "jest",
    "e2e": "npm run build && jest -c e2e.config.js --detectOpenHandles",
    "e2e:debug": "debug=true npm run e2e",
    "lint": "eslint ./src *.config.js --fix"
  },
  "dependencies": {
    "angular": "^1.7.4",
    "angular-animate": "^1.8.2",
    "angular-aria": "^1.8.2",
    "angular-material": "^1.2.3",
    "angular-route": "^1.7.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "angularjs-annotate"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-angularjs-annotate": "^0.9.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "jest": "^23.6.0",
    "jest-puppeteer-preset": "^3.3.1",
    "puppeteer": "^1.8.0",
    "serve": "^10.0.1",
    "style-loader": "^0.23.0",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg|css|html)$": "<rootDir>//__mocks__/asset.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "page": true
    }
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
