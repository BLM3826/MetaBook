{
  "extends": "airbnb",
  "env": {
    "node":true,
    "mocha":true,
    "es6": true
  },
  "rules": {
    // disable requiring trailing commas
        "linebreak-style": 0,
    "comma-dangle": 0,
    "max-len": ["error", {"code": 120, "ignoreComments": true, "ignoreUrls": true, "ignoreStrings": true}],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
